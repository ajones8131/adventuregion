<!DOCTYPE html>
<html>
  <head>
    <title>AdventuRegion</title>
    <%= stylesheet_link_tag "main.css" %>
  </head>
  <body> 
    <div id="title"> Edit <%= @place.name %> </div> 
    <%= render 'Shared/navbar' %>
    
    <div id="wrapper">
      <div id="sidebar">

      </div>
      <div id="mainContent">
               <form accept-charset="UTF-8" action="/place/<%= params[:id] %>" class="edit_place" id="edit_place" method="post">
        <input name="utf8" type="hidden" value="&#x2713;" />
        <input type="hidden" name="_method" value="put" />
        <input name="authenticity_token" type="hidden" value=<%= form_authenticity_token %> />

        <label for="place_name">Name</label>:
        <input id="place_name" name="place[name]" type="text" value="<%= @place.name %>"><br><br>

        <label for="place_category">Category</label>:
        <input id="place_category" name="place[category]" type="text" value=<%= @place.category %>><br><br>

        <label for="place_price">Price</label>:
        <select id="place_price" name="place[price]">
          <option value="Free" <% if @place.price == "Free" %>selected<% end %>>Free</option>
          <option value="Low" <% if @place.price == "Low" %>selected<% end %>>Low</option>
          <option value="Medium" <% if @place.price == "Medium" %>selected<% end %>>Medium</option>
          <option value="High" <% if @place.price == "High" %>selected<% end %>>High</option>
        </select><br><br>

        <label for="place_popularity">Popularity</label>:
        <select id="place_popularity" name="place[popularity]">
          <option value="Low" <% if @place.popularity == "Low" %>selected<% end %>>Low</option>
          <option value="Medium" <% if @place.popularity == "Medium" %>selected<% end %>>Medium</option>
          <option value="High" <% if @place.popularity == "High" %>selected<% end %>>High</option>
        </select><br><br>

        <input name="commit" type="submit" value="Update Place"><br>
      </form>
      </div>
    </div>
    <div id="footer"></div>
  </body>
</html>