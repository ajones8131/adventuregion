<!DOCTYPE html>
<html>
 <head>
    <title>AdventuRegion</title>
    <%= stylesheet_link_tag "index.css" %>
  </head>
  <body>
    <%= render 'Shared/navbar' %>
<body>

  <h1>Current Places</h1>

 <!--  <a href="/place/create"> Add new place </a><br> -->

  <a> <%=  link_to "Add a place", "/place/create" %> </a>

  <table id="place_table">
    <thead>
      <tr>
        <th>Place</th>
        <th>Place ID</th> 
        <th>Type</th>
        <th>Price</th>
        <th>Popularity</th> 
      </tr>
    </thead>
    <tbody>
      <% @places.each do |p| %>
          <tr>
            <td><%= link_to p.name, :controller => :place, :action => :show, :id => p.id %></td>
            <td><%= p.placeid %></td>
            <td><%= p.category %></td>
            <td><%= p.price %></td>
            <td><%= p.popularity %></td>
          </tr>
      <% end %>
  </tbody>
  </table> 
</body>
</html>
